<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Depense.NouveauLieu">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nouveau Lieu" Style="{StaticResource titre}" Margin="0, 10"/>
            <Label Text="Nom" Style="{StaticResource controle}"/>
            <Entry x:Name="NomEntry" Placeholder="Nom"/>
            <Label Text="Adresse" Style="{StaticResource controle}"/>
            <Entry x:Name="AdresseEntry" Placeholder="Adresse"/>
            <Label Text="Catégorie" Style="{StaticResource controle}"/>
            <Picker x:Name="pickCategorie"/>
            <!--N'oubliez pas le clavier :)-->
            <Label Text="Coordonées" Style="{StaticResource controle}" />
            <Entry x:Name="LatitudeEntry" Placeholder="Latitude" Keyboard="Numeric"/>
            <Entry x:Name="LongitudeEntry" Placeholder="Longitude" Keyboard="Numeric"/>
            <Button x:Name="btnEnregistrer" Text="Enregistrer" Clicked="btnEnregistrer_Clicked"  />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>